@model mvc_project.Models.Login.LoginViewModel
@{
    Layout = "_LayoutLogin";
}

@{
    ViewData["Title"] = "Peliculas";
}

<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100">
            <form action='@Url.Content("~/Home/login")' method="get" class="login100-form validate-form">
                <span class="login100-form-title p-b-43">
                    Login
                </span>
                
                @if (!Model.isLogged)
                {
                    <div>@Model.message</div>
                }

                <div class="wrap-input100 validate-input" data-validate="Ingrese el nombre de usuario">
                    <input id="txt_user_name" class="input100" type="text" name="userName" value="@Model.userName">
                    <span class="focus-input100"></span>
                    <span class="label-input100">Usuario</span>
                </div>
                
                <div class="wrap-input100 validate-input" data-validate="Ingrese la contraseña">
                    <input class="input100" type="password" name="password">
                    <span class="focus-input100"></span>
                    <span class="label-input100">Contraseña</span>
                </div>

                <div class="container-login100-form-btn">
                    <button class="login100-form-btn">
                        Ingresar
                    </button>
                </div>
            </form>

            <div class="login100-more" style="background-image: url('@Url.Content("~/images/bg-01.jpg")');">
            </div>
        </div>
    </div>
</div>
	
